<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@../view/application.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.control.LoginController">
   <children>
      <AnchorPane styleClass="pane" stylesheets="@../view/application.css">
         <children>
            <Label id="titolo" styleClass="pane" stylesheets="@../view/application.css" text="Login" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="10.0" />
         </children>
      </AnchorPane>
      <Label stylesheets="@../view/application.css" text="Utente">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="utente" styleClass="text" stylesheets="@application.css">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </TextField>
      <Label stylesheets="@../view/application.css" text="Password">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="password">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </PasswordField>
      <AnchorPane styleClass="pane" stylesheets="@../view/application.css">
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
         <children>
            <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#doLogin" text="Accesso al database" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
         </children>
      </AnchorPane>
   </children>
   <styleClass>
      <String fx:value="vbox" />
      <String fx:value="pane" />
   </styleClass>
</VBox>
